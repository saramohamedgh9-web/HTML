    <style>
       div.sticky {
        position: sticky;
        top:0%;
        width: 100px;
        height: 100px;
        background-color: lightcoral;}
        div.fixed {
            position:fixed;
            top: 150px;
            right: 100px;
            width: 100px;
            height: 100px;
            background-color: lightseagreen;}
            div.relative {
                position: relative;
                top:50px;
                left: 50px;
                width: 200px;
                height: 200px;
                background-color: aqua;
            }
            div.absolute {
                position: absolute;
                top: 20px;
                left: 20px;
                width: 100px;
                height: 100px;
                background-color: gold;
            }
    </style>
</head>
<body>
    <div class="sticky">This is sticky position </div>
    <div class="fixed">This is fixed position</div>
    <div class="relative">This is relative position
    <div class="absolute">This is absolute position</div>
