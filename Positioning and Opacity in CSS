        div.sticky {
        position: sticky;
        top:10px;
        width: 100px;
        height: 100px;
        background-color: lightcoral;}
        div.fixed {
            position:fixed;
            top: 30px;
            right: 50px;
            width: 100px;
            height: 100px;
            background-color: lightseagreen;}
            div.relative {
                position: relative;
                top:50px;
                left: 50px;
                width: 200px;
                height: 200px;
                background-color: aqua;
            }
            div.absolute {
                position: absolute;
                top: 20px;
                left: 20px;
                width: 100px;
                height: 100px;
                background-color: gold;
            }
            div{
 height: 100px; background-color: crimson; box-shadow: 8px 7px 8px;
}
div.first{
    opacity: 0.1;
}
div.second{
    opacity: 0.3;
}
div.third{
    opacity: 0.6; 
}
    </style>
